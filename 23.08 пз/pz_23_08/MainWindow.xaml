<Window x:Class="pz_23_08.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz_23_08"
        mc:Ignorable="d"
        Title="MainWindow" Background="Aquamarine" Height="201" Width="169">
    <Grid>
        <Label Content="Регистрация" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="login_txt" HorizontalAlignment="Left" Margin="18,46,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="login_txt_TextChanged"/>
        <TextBox x:Name="email_txt" HorizontalAlignment="Center" Margin="0,69,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="email_txt_TextChanged"/>
        <PasswordBox x:Name="password_txt" HorizontalAlignment="Center"   VerticalAlignment="Top" Width="120" PasswordChanged="password_txt_TextChanged" Margin="0,92,0,0"/>
        <PasswordBox x:Name="password_again_txt" HorizontalAlignment="Center" Margin="0,115,0,0"   VerticalAlignment="Top" Width="120" />
        <Button Content="Вход" HorizontalAlignment="Center" Margin="0,138,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>

    </Grid>
</Window>
